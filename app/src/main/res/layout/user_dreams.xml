<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5">

    <RelativeLayout
        android:id="@+id/user_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/album_title"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_corner_layout">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_input_weight"
            android:layout_width="147dp"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/margin_small"
            android:padding="@dimen/user_profile_margin"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp">
            <EditText
                android:id="@+id/input_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textColor="@color/wyttext"
                android:hint="@string/current_weight"
                android:inputType="number"
                android:gravity="center"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_input_dream_weight"
            android:layout_width="147dp"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/margin_small"
            android:padding="@dimen/user_profile_margin"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@id/txt_input_weight"
            android:layout_toEndOf="@id/txt_input_weight">
            <EditText
                android:id="@+id/input_dream_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textColor="@color/wyttext"
                android:hint="@string/goal_weight"
                android:inputType="number"
                android:gravity="center"/>
        </android.support.design.widget.TextInputLayout>



    </RelativeLayout>

</RelativeLayout>